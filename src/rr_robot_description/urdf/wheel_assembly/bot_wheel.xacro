<?xml version="1.0"?>
<!-- because closed loops are not allowed in URDF, the suspension is simplified to a torsional
spring
    at the wheel mount revolute joint. This can approximate the more complicated suspension as long as
    the range of motion is small -->
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="bot_wheel">
    <xacro:macro name="bot_wheels_macro" params="parent x z wspan">
        <xacro:property name="range" value="0.174533" />
        <xacro:macro name="make_bot_wheel" params="te='true'">
            <xacro:if value="${te}">
                <xacro:property name="postfix" value="te" />
                <xacro:property name="y" value="${-wspan/2}" />
            </xacro:if>
            <xacro:unless value="${te}">
                <xacro:property name="postfix" value="le" />
                <xacro:property name="y" value="${wspan/2}" />
            </xacro:unless>
            <!-- Wheel mount -->
            <link name="bot_wheel_mount_${postfix}">
                <inertial>
                    <mass value="0.001" />
                    <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0"
                        izz="0.005" />
                </inertial>
            </link>

            <joint name="bot_pivot_joint_${postfix}" type="revolute">
                <origin xyz="${x} ${y} ${z}" rpy="0 0 0" />
                <axis xyz="0 1 0" />
                <limit lower="0" upper="0.38659043" effort="100000" velocity="1000" />
                <parent link="${parent}" />
                <child link="bot_wheel_mount_${postfix}" />
                <dynamics damping="1" friction="10" />
            </joint>

            <!-- Wheel -->
            <link name="bot_wheel_${postfix}">
                <inertial>
                    <mass value="1" />
                    <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0"
                        izz="0.005" />
                </inertial>
                <visual>
                    <origin xyz="0 0 0" rpy="0 0 0" />
                    <geometry>
                        <mesh
                            filename="package://rr_robot_description/include/chassis/meshes/BottomWheels/visual.STL" />
                    </geometry>
                    <material name="grey">
                        <color rgba="0.4 0.4 0.4 1" />
                    </material>
                </visual>
                <collision>
                    <origin xyz="0 0 0" rpy="0 1.57079633 0" />
                    <geometry>
                        <cylinder radius="0.055" length="0.03322"/>
                        <!-- <mesh
                            filename="package://rr_robot_description/include/chassis/meshes/BottomWheels/collision.STL" /> -->
                    </geometry>
                </collision>
            </link>

            <joint name="bot_wheel_joint_${postfix}" type="continuous">
                <origin xyz="-0.06062042 0 -0.0234556" rpy="0 0 1.5708" />
                <axis xyz="1 0 0" />
                <parent link="bot_wheel_mount_${postfix}" />
                <child link="bot_wheel_${postfix}" />
                <dynamics damping="1" friction="10"/>
            </joint>
        </xacro:macro>
        <xacro:make_bot_wheel te="true" />
        <xacro:make_bot_wheel te="false" />
    </xacro:macro>
</robot>