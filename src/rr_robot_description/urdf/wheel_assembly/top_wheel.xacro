<?xml version="1.0"?>
<!-- because closed loops are not allowed in URDF, the suspension is simplified to a torsional spring
    at the wheel mount revolute joint. This can approximate the more complicated suspension as long as
    the range of motion is small -->
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="top_wheel">
    <xacro:property name="range" value="0.174533" />
    <xacro:macro name="top_wheel_macro" params="parent x y z postfix">
        <link name="top_wheel_mount_${postfix}">
            <inertial>
                <mass value="0.001" />
                <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
            </inertial>
            <visual>
                <geometry>
                    <box size="0.05 0.01 0.01"/>
                </geometry>
            </visual>
        </link>
        <joint name="top_pivot_joint_${postfix}" type="revolute">
            <origin xyz="${x+0.06343} ${y} ${z+0.01419}" rpy="0 0 0" />
            <axis xyz="0 1 0" />
            <limit lower="${-range}" upper="${range}" effort="1000" velocity="1000"/>
            <parent link="${parent}" />
            <child link="bottom_wheel_mount_${postfix}"/>
        </joint>
        
        <link name="yaw_link_${postfix}">
            <inertial>
                <mass value="1" />
                <origin xyz="0 0 0" rpy="0 0 0" />
                <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
            </inertial>
        </link>
        
        <joint name="top_wheel_yaw_joint_${postfix}" type="revolute">
            <origin xyz="1.13039 0.12962 -0.1344" rpy="0. 0. 1.5708" />
            <axis rpy="0 0 0" xyz="0 0 1" />
            <limit lower="-0.20" upper="0.20" effort="10000" velocity="1000" />
            <joint_properties damping="1.0" friction="1.0" />
            <parent link="top_wheel_mount_${postfix}" />
            <child link="yaw_link_${postfix}" />
        </joint>
        

        <link name="top_wheel_${postfix}">
            <inertial>
              <mass value="1" />
              <origin xyz="0 0 0" rpy="0 0 0" />
              <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
            </inertial>
            <visual>
              <origin xyz="0 0 0" rpy="0 0 0" />
              <geometry>
                <mesh filename="package://rr_robot_description/include/chassis/meshes/TopWheels/visual.STL" />
              </geometry>
              <material name="grey">
                <color rgba="0.4 0.4 0.4 1" />
              </material>
            </visual>
            <collision>
              <origin xyz="0 0 0" rpy="0 0 0" />
              <geometry>
                <mesh filename="package://rr_robot_description/include/chassis/meshes/TopWheels/collision.STL" />
              </geometry>
            </collision>
          </link>
          <joint name="top_wheel_le_joint" type="continuous">
            <origin xyz="1.13039 0.12962 -0.1344" rpy="0. 0. 1.5708" />
            <axis rpy="0 0 0" xyz="0 1 0" />
            <parent link="yaw_link_${postfix}" />
            <child link="top_wheel_${postfix}" />
          </joint>
    </xacro:macro>
</robot>